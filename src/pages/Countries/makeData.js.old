    () => [
      {
        Header: 'Countries',
        columns: [
          {
            Header: 'Country Name',
            accessor: 'country_name',
          },
          {
            Header: 'Last Name',
            accessor: 'cases',
          },
          {
            Header: 'Deads',
            accessor: 'deaths',
          },
          {
            Header: 'Critical',
            accessor: 'critical',
          },
          {
            Header: 'Recovered',
            accessor: 'total_recovered',
					},
					{
						 Header: 'New Deaths',
						 accessor: 'new_deaths'
					},
					{
						Header: 'New Cases',
						accessor: 'new_cases'
				 },
				 {
            Header: 'statistic taken at',
            accessor: 'statistic_taken_at',
          },
